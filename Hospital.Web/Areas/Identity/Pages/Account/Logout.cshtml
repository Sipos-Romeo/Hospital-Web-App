@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-12 text-center">
            <h1 class="display-6 text-primary">@ViewData["Title"]</h1>
            <p class="text-muted">Are you sure you want to log out?</p>
        </div>
    </div>

    <!-- Confirmation Card -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="text-muted">You are currently logged in as <b>@User.Identity.Name</b>.</p>
                        <p>Click the button below to log out of your account.</p>

                        <form class="mt-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fa fa-sign-out-alt"></i> Log Out
                            </button>
                        </form>
                    }
                    else
                    {
                        <p class="text-success">
                            <i class="fa fa-check-circle text-success"></i>
                            You have successfully logged out of the application.
                        </p>
                        <a href="/" class="btn btn-primary btn-lg mt-3">
                            <i class="fa fa-home"></i> Back to Home
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
