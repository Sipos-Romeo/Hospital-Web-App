@using Hospital.Services
@model Hospital.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Delete</h4>
            <span class="ml-1">Delete Appointment</span>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-8 col-lg-8">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body text-center">
                    <h3 class="mb-5 text-danger">Delete Appointment?</h3>
                    <hr />
                    <div class="container">
                        <div class="text-left">
                            <!-- Displaying Appointment details -->
                            <div class="row">
                                <div class="col-4">
                                    <i class='bx bxs-category'></i>
                                    <b>Number</b>
                                </div>
                                <div class="col-8">
                                    @Html.DisplayFor(model => model.Number)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-4">
                                    <i class='bx bxs-category'></i>
                                    <b>Type</b>
                                </div>
                                <div class="col-8">
                                    @Html.DisplayFor(model => model.Type)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-4">
                                    <i class='bx bxs-category'></i>
                                    <b>Description</b>
                                </div>
                                <div class="col-8">
                                    @Html.DisplayFor(model => model.Description)
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">
                    <form asp-action="Delete">
                        <a class="btn btn-outline-dark" asp-action="Index">Back to list</a>
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
