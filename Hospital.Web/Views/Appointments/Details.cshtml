@using Hospital.Services
@model Hospital.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Appointment Details</h1>
            <p class="text-muted">View the details of the selected appointment.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary text-center mb-4">Appointment Information</h4>
                    <hr />

                    <!-- Appointment Details -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            <i class="fa fa-hashtag text-primary mr-2"></i>
                            Appointment Number
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Number)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-tags text-primary mr-2"></i>
                            Appointment Type
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-info-circle text-primary mr-2"></i>
                            Description
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>

                    <hr />

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
