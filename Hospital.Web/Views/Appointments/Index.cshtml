@using Hospital.Services
@model IEnumerable<Hospital.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Appointments</h1>
            <p class="text-muted">Manage your appointments from the list below.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-primary btn-lg" asp-action="Create">
                <i class="fa fa-plus"></i> Create New Appointment
            </a>
        </div>
    </div>

    <!-- Appointments Cards -->
    <div class="row">
        @foreach (var appointment in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">Appointment #@appointment.Number</h5>
                        <p class="card-text text-muted">@appointment.Type</p>
                        <p class="card-text">@appointment.Description</p>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-around">
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@appointment.Id">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@appointment.Id">
                            <i class="fa fa-info-circle"></i> Details
                        </a>
                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@appointment.Id">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
