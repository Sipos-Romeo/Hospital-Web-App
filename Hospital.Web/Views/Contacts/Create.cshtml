@using Hospital.Services;
@model Hospital.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Create</h4>
            <span class="ml-1">New Contact</span>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-8 col-lg-8">
            <div class="card testimonial-card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body text-center">
                    <div class="avatar-simple mx-auto mb-1 mt-2">
                        <i class="bi bi-hospital"></i>
                    </div>
                    <h4>Contact</h4>
                    <hr />
                    <div class="text-left p-3 text-dark">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                            <div class="form-group row my-3">
                                <label class="col-4 col-form-label"><i class='bx bxs-book-content'></i> <b>Email:</b></label>
                                <div class="col-8">
                                    <input asp-for="Contact.Email" class="form-control" />
                                    <span asp-validation-for="Contact.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                <label class="col-4 col-form-label"><i class='bx bxs-book-content'></i> <b>Phone:</b></label>
                                <div class="col-8">
                                    <input asp-for="Contact.Phone" class="form-control" />
                                    <span asp-validation-for="Contact.Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                <label class="col-4 col-form-label"><i class='bx bxs-book-content'></i> <b>Phone Number:</b></label>
                                <div class="col-8">
                                    <input asp-for="Contact.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="Contact.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                <label class="col-4 col-form-label"><i class='bx bxs-book-content'></i> <b>Hospital Information:</b></label>
                                <div class="col-8">
                                    <select asp-for="Contact.HospitalInfoId" class="form-select" id="HospitalDropdown">
                                        <option value="">-- Select Hospital --</option>
                                        @foreach (var hospital in Model.Hospitals)
                                        {
                                            <option value="@hospital.Key">@hospital.Value</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Contact.HospitalInfo" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row my-4">
                                <div class="col-4">
                                    <a class="btn btn-outline-dark" asp-action="Index">Back to list</a>
                                </div>
                                <div class="col-8 text-right">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
