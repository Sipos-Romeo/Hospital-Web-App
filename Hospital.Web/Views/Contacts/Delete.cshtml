@using Hospital.Services
@model Hospital.Models.Contact

@{
    ViewData["Title"] = "Delete";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Delete</h4>
            <span class="ml-1">Delete Contact?</span>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-8 col-lg-8">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body text-center">

                    <h3 class="mb-5 text-danger">Delete Contact?</h3>
                    <hr />
                    <div class="container">
                        <div class="text-left text-dark">

                            <!-- Hospital Id -->
                            <div class="row">
                                <div class="col">
                                    <i class='bx bxs-category'></i>
                                    <b>Hospital Id</b>
                                </div>
                                <div class="col">
                                    @Html.DisplayFor(model => model.HospitalInfoId)
                                </div>
                            </div>

                            <!-- Hospital Info -->
                            <div class="row">
                                <div class="col">
                                    <i class='bx bxs-category'></i>
                                    <b>Hospital Info</b>
                                </div>
                                <div class="col">
                                    @Html.DisplayFor(model => model.HospitalInfo)
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="row">
                                <div class="col">
                                    <i class='bx bxs-category'></i>
                                    <b>Phone</b>
                                </div>
                                <div class="col">
                                    @Html.DisplayFor(model => model.Phone)
                                </div>
                            </div>

                            <!-- Phone Number -->
                            <div class="row">
                                <div class="col">
                                    <i class='bx bxs-category'></i>
                                    <b>Phone Number</b>
                                </div>
                                <div class="col">
                                    @Html.DisplayFor(model => model.PhoneNumber)
                                </div>
                            </div>

                        </div>
                    </div>

                    <hr class="my-4">
                    <form asp-action="Delete">
                        <a class="btn btn-outline-dark" asp-action="Index">Back to list</a>
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
