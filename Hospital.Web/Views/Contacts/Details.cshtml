@using Hospital.Services
@model Hospital.Models.Contact

@{
    ViewData["Title"] = "Contact Details";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Contact Details</h1>
            <p class="text-muted">View the details of the selected contact.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary mb-4 text-center">Contact Information</h4>
                    <hr />

                    <!-- Contact Details -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            <i class="fa fa-envelope text-primary mr-2"></i>
                            Email
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-hospital text-primary mr-2"></i>
                            Hospital Info
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.HospitalInfo.Name)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-phone text-primary mr-2"></i>
                            Phone
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-mobile-alt text-primary mr-2"></i>
                            Phone Number
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                    </dl>

                    <hr />

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
