@using Hospital.Services
@model Hospital.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Edit Contact Info";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Edit Contact Info</h1>
            <p class="text-muted">Modify the details of the selected contact.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary mb-4">Contact Information</h4>
                    <hr />

                    <!-- Form -->
                    <form asp-action="Edit">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Hidden Field for Contact ID -->
                        <input type="hidden" asp-for="Contact.Id" />

                        <!-- Email Field -->
                        <div class="form-group mb-3">
                            <label for="Email" class="form-label">
                                <i class="fa fa-envelope text-primary mr-2"></i>
                                Email
                            </label>
                            <input asp-for="Contact.Email" class="form-control" />
                            <span asp-validation-for="Contact.Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Field -->
                        <div class="form-group mb-3">
                            <label for="Phone" class="form-label">
                                <i class="fa fa-phone text-primary mr-2"></i>
                                Phone
                            </label>
                            <input asp-for="Contact.Phone" class="form-control" />
                            <span asp-validation-for="Contact.Phone" class="text-danger"></span>
                        </div>

                        <!-- Phone Number Field -->
                        <div class="form-group mb-3">
                            <label for="PhoneNumber" class="form-label">
                                <i class="fa fa-mobile-alt text-primary mr-2"></i>
                                Phone Number
                            </label>
                            <input asp-for="Contact.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Contact.PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Hospital Info Dropdown -->
                        <div class="form-group mb-3">
                            <label for="HospitalInfoId" class="form-label">
                                <i class="fa fa-hospital text-primary mr-2"></i>
                                Hospital Info
                            </label>
                            <select asp-for="Contact.HospitalInfoId" class="form-select" id="HospitalDropdown">
                                <option value="">-- Select Hospital --</option>
                                @foreach (var hospital in Model.Hospitals)
                                {
                                    <option value="@hospital.Key">@hospital.Value</option>
                                }
                            </select>
                            <span asp-validation-for="Contact.HospitalInfoId" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fa fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
