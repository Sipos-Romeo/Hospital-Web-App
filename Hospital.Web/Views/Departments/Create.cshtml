@using Hospital.Services
@model Hospital.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Create New Department</h1>
            <p class="text-muted">Fill out the form below to add a new department.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary mb-4">Department Details</h4>
                    <hr />

                    <!-- Form -->
                    <form asp-action="Create">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Name Field -->
                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">
                                <i class="fa fa-building text-primary mr-2"></i>
                                Name
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Description Field -->
                        <div class="form-group mb-3">
                            <label for="Description" class="form-label">
                                <i class="fa fa-info-circle text-primary mr-2"></i>
                                Description
                            </label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Employees Field -->
                        <div class="form-group mb-3">
                            <label for="Employees" class="form-label">
                                <i class="fa fa-users text-primary mr-2"></i>
                                Employees
                            </label>
                            <input asp-for="Employees" class="form-control" />
                            <span asp-validation-for="Employees" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fa fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
