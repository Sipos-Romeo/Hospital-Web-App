@using Hospital.Services
@model Hospital.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6 text-danger">Delete Department</h1>
            <p class="text-muted">Are you sure you want to delete this department? This action cannot be undone.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Confirmation Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-danger text-center mb-4">Delete This Department?</h4>
                    <hr />

                    <!-- Department Details -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            <i class="fa fa-building text-primary mr-2"></i>
                            Name
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-info-circle text-primary mr-2"></i>
                            Description
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-users text-primary mr-2"></i>
                            Employees
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Employees)</dd>
                    </dl>

                    <hr />

                    <!-- Action Buttons -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fa fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
