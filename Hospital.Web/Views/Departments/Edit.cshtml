@using Hospital.Services;

@model Hospital.Models.Department

@{
    ViewData["Title"] = "Edit";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="/css/card.css" rel="stylesheet" />

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Edit</h4>
            <span class="ml-1"> Edit Contact info </span>
        </div>
    </div>
</div>

<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8">
                <div class="card testimonial-card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body text-center">
                        <h4>Department info</h4>
                        <hr />
                        <div class="text-left p-3 text-dark">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bxs-book-content'></i>
                                        <b>Name</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bxs-book-content'></i>
                                        <b>Description</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bxs-book-content'></i>
                                        <b>Employees</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="Employees" class="form-control" />
                                        <span asp-validation-for="Employees" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-4">
                                    <div class="col-4">
                                        <a class="btn btn-outline-dark" asp-action="Index">Back to list</a>
                                    </div>
                                    <div class="col-8">
                                        <input type="submit" value=Save class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

