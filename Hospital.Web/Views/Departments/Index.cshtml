@using Hospital.Services
@model IEnumerable<Hospital.Models.Department>

@{
    ViewData["Title"] = "Department Information";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Department Information</h1>
            <p class="text-muted">List of departments in the hospital</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-primary btn-lg" asp-action="Create">
                <i class="fa fa-plus"></i> Create New Department
            </a>
        </div>
    </div>

    <!-- Departments Cards -->
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p class="text-muted text-center">No departments available. Click "Create New Department" to add one.</p>
            </div>
        }
        else
        {
            @foreach (var department in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title text-primary">@department.Name</h5>
                            <p class="card-text text-muted">@department.Description</p>
                            <p class="card-text">Employees: @department.Employees</p>
                        </div>
                        <div class="card-footer bg-light d-flex justify-content-around">
                            <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@department.Id">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@department.Id">
                                <i class="fa fa-info-circle"></i> Details
                            </a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@department.Id">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
