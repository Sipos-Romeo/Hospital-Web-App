@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-12 text-center">
            <h1 class="display-6 text-primary">@ViewData["Title"]</h1>
            <p class="text-muted">Your trust is important to us. Learn more about how we handle your data.</p>
        </div>
    </div>

    <!-- Privacy Policy Content -->
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Introduction Section -->
            <section class="mb-5">
                <h4 class="text-primary">Introduction</h4>
                <p>
                    At <b>Hospital</b>, we are committed to protecting your privacy. This privacy policy
                    explains how we collect, use, and safeguard your information when you use our services.
                </p>
            </section>

            <!-- Data Collection Section -->
            <section class="mb-5">
                <h4 class="text-primary">What Data We Collect</h4>
                <ul class="list-group">
                    <li class="list-group-item">Personal Information (e.g., Name, Email Address, Phone Number)</li>
                    <li class="list-group-item">Technical Information (e.g., IP Address, Browser Details)</li>
                    <li class="list-group-item">Usage Data (e.g., Pages Visited, Actions Performed)</li>
                </ul>
            </section>

            <!-- Data Usage Section -->
            <section class="mb-5">
                <h4 class="text-primary">How We Use Your Data</h4>
                <p>We use your data to:</p>
                <ul class="list-group">
                    <li class="list-group-item">Provide and improve our services</li>
                    <li class="list-group-item">Respond to your inquiries and support requests</li>
                    <li class="list-group-item">Send promotional and informational communications</li>
                </ul>
            </section>

            <!-- Security Section -->
            <section class="mb-5">
                <h4 class="text-primary">How We Protect Your Data</h4>
                <p>
                    We implement robust security measures to protect your personal information, including
                    encryption, secure servers, and regular monitoring for vulnerabilities.
                </p>
            </section>

            <!-- User Rights Section -->
            <section class="mb-5">
                <h4 class="text-primary">Your Rights</h4>
                <p>You have the right to:</p>
                <ul class="list-group">
                    <li class="list-group-item">Access the data we hold about you</li>
                    <li class="list-group-item">Request corrections to your personal information</li>
                    <li class="list-group-item">Opt-out of marketing communications</li>
                    <li class="list-group-item">Request the deletion of your data</li>
                </ul>
            </section>

            <!-- Contact Section -->
            <section class="mb-5">
                <h4 class="text-primary">Contact Us</h4>
                <p>
                    If you have any questions about this privacy policy or our data practices, please contact us at:
                </p>
                <address>
                    <strong>Email:</strong> <a href="mailto:support@example.com">support@example.com</a><br />
                    <strong>Phone:</strong> +1-800-123-4567<br />
                    <strong>Address:</strong> 1234 Main Street, Suite 100, Your City, Your Country
                </address>
            </section>

            <!-- Footer -->
            <div class="text-center mt-4">
                <a class="btn btn-primary" href="/">
                    <i class="fa fa-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
