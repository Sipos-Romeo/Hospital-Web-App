@using Hospital.Services
@model Hospital.Models.HospitalInfo

@{
    ViewData["Title"] = "Create Hospital Info";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Create New Hospital Info</h1>
            <p class="text-muted">Fill out the details to add a new hospital entry.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary mb-3">Hospital Information</h4>
                    <hr />
                    <form asp-action="Create">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Name Field -->
                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">
                                <i class="fa fa-hospital mr-2 text-primary"></i>
                                Name
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Type Field -->
                        <div class="form-group mb-3">
                            <label for="Type" class="form-label">
                                <i class="fa fa-tags mr-2 text-primary"></i>
                                Type
                            </label>
                            <input asp-for="Type" class="form-control" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <!-- City Field -->
                        <div class="form-group mb-3">
                            <label for="City" class="form-label">
                                <i class="fa fa-city mr-2 text-primary"></i>
                                City
                            </label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <!-- Country Field -->
                        <div class="form-group mb-3">
                            <label for="Country" class="form-label">
                                <i class="fa fa-globe mr-2 text-primary"></i>
                                Country
                            </label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <!-- PinCode Field -->
                        <div class="form-group mb-3">
                            <label for="PinCode" class="form-label">
                                <i class="fa fa-map-pin mr-2 text-primary"></i>
                                Pin Code
                            </label>
                            <input asp-for="PinCode" class="form-control" />
                            <span asp-validation-for="PinCode" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fa fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
