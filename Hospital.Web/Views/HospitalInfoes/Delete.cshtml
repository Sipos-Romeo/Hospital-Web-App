@using Hospital.Services
@model Hospital.Models.HospitalInfo

@{
    ViewData["Title"] = "Delete Hospital Info";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6 text-danger">Delete Hospital Info</h1>
            <p class="text-muted">Are you sure you want to delete this hospital record? This action cannot be undone.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Confirmation Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center text-danger mb-4">Delete This Record?</h4>
                    <hr />

                    <!-- Record Details -->
                    <div class="mb-4">
                        <dl class="row">
                            <dt class="col-sm-4">
                                <i class="fa fa-hospital text-primary mr-2"></i>
                                Name
                            </dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                            <dt class="col-sm-4">
                                <i class="fa fa-tags text-primary mr-2"></i>
                                Type
                            </dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                            <dt class="col-sm-4">
                                <i class="fa fa-city text-primary mr-2"></i>
                                City
                            </dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>
                        </dl>
                    </div>

                    <hr />

                    <!-- Action Buttons -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fa fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
