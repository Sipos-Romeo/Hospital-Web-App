@using Hospital.Services
@model IEnumerable<Hospital.Models.HospitalInfo>

@{
    ViewData["Title"] = "Hospital Information";
}
<link rel="stylesheet" href="/vendor/datatables/css/jquery.dataTables.min.css" />
<link href="/css/card.css" rel="stylesheet" />

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <div class="welcome-text">
                <h1 class="display-5">Hospital Information</h1>
                <p class="lead">Find all hospital details in one place.</p>
            </div>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-primary btn-lg" asp-action="Create">
                <i class="fa fa-plus mr-2"></i> Create New
            </a>
        </div>
    </div>

    <!-- Search Bar Section -->
    <form asp-controller="HospitalInfoes" asp-action="Index" method="get" class="mb-4">
        <div class="input-group shadow">
            <input type="text" name="searchString" class="form-control" placeholder="Search hospital info..." />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    <!-- Cards Section -->
    <div class="row">
        @foreach (var hospitalInfo in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">@hospitalInfo.Name</h5>
                        <p class="card-text text-muted">@hospitalInfo.Type</p>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-center">
                        <a class="btn btn-sm btn-outline-primary mx-2" asp-action="Edit" asp-route-id="@hospitalInfo.Id">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-sm btn-outline-secondary mx-2" asp-action="Details" asp-route-id="@hospitalInfo.Id">
                            <i class="fa fa-info-circle"></i> Details
                        </a>
                        <a class="btn btn-sm btn-outline-danger mx-2" asp-action="Delete" asp-route-id="@hospitalInfo.Id">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
