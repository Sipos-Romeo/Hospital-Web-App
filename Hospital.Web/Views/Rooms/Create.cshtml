@using Hospital.Services
@model Hospital.ViewModels.RoomViewModel

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Create New Room</h1>
            <p class="text-muted">Fill in the details to add a new room to the hospital.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary mb-4">Room Details</h4>
                    <hr />

                    <!-- Form -->
                    <form asp-action="Create">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Room Number Field -->
                        <div class="form-group mb-3">
                            <label for="RoomNumber" class="form-label">
                                <i class="fa fa-door-closed text-primary mr-2"></i>
                                Room Number
                            </label>
                            <input asp-for="Room.RoomNumber" class="form-control" />
                            <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
                        </div>

                        <!-- Type Field -->
                        <div class="form-group mb-3">
                            <label for="Type" class="form-label">
                                <i class="fa fa-building text-primary mr-2"></i>
                                Type
                            </label>
                            <input asp-for="Room.Type" class="form-control" />
                            <span asp-validation-for="Room.Type" class="text-danger"></span>
                        </div>

                        <!-- Status Field -->
                        <div class="form-group mb-3">
                            <label for="Status" class="form-label">
                                <i class="fa fa-info-circle text-primary mr-2"></i>
                                Status
                            </label>
                            <input asp-for="Room.Status" class="form-control" />
                            <span asp-validation-for="Room.Status" class="text-danger"></span>
                        </div>

                        <!-- Hospital Information Field -->
                        <div class="form-group mb-3">
                            <label for="HospitalDropdown" class="form-label">
                                <i class="fa fa-hospital text-primary mr-2"></i>
                                Hospital Information
                            </label>
                            <select asp-for="Room.HospitalInfoId" class="form-select" id="HospitalDropdown">
                                <option value="">-- Select Hospital --</option>
                                @foreach (var hospital in Model.Hospitals)
                                {
                                    <option value="@hospital.Key">@hospital.Value</option>
                                }
                            </select>
                            <span asp-validation-for="Room.HospitalInfoId" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fa fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
