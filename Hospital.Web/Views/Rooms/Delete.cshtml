@using Hospital.Services;

@model Hospital.Models.Room

@{
    ViewData["Title"] = "Delete";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Delete</h4>
            <span class="ml-1"> Delete Room </span>
        </div>
    </div>
</div>


<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body text-center">

                        <h3 class="mb-5 text-danger">Delete Room?</h3>
                        <hr />
                        <div class="container">
                            <div class="text-left text-dark">
                                
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bxs-category'></i>
                                        <b>Room Number</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.RoomNumber)
                                    </div>
                                </div>

                                 <div class="row">
                                    <div class="col">
                                        <i class='bx bxs-category'></i>
                                        <b>Type</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Type)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bxs-category'></i>
                                        <b>Hospital Info</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.HospitalInfo.Name)
                                    </div>
                                </div>

                            </div>
                        </div>

                        <hr class="my-4">
                        <form asp-action="Delete">
                            <a class="btn btn-outline-dark" asp-action="Index">Back to list</a> 
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value=Delete class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>