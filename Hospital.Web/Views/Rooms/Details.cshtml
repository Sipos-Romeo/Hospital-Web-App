@using Hospital.Services
@model Hospital.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Room Details</h1>
            <p class="text-muted">View the details of the selected room.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary text-center mb-4">Room Information</h4>
                    <hr />

                    <!-- Room Details -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            <i class="fa fa-door-closed text-primary mr-2"></i>
                            Room Number
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.RoomNumber)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-building text-primary mr-2"></i>
                            Type
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-info-circle text-primary mr-2"></i>
                            Status
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                        <dt class="col-sm-4">
                            <i class="fa fa-hospital text-primary mr-2"></i>
                            Hospital Info
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.HospitalInfo.Name)</dd>
                    </dl>

                    <hr />

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
