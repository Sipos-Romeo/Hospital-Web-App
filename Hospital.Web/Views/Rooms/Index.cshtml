@using Hospital.Services
@model IEnumerable<Hospital.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Room Information</h1>
            <p class="text-muted">View all rooms available in the hospital.</p>
        </div>
        <div class="col-md-4 text-md-right text-center">
            <a class="btn btn-primary btn-lg" asp-action="Create">
                <i class="fa fa-plus"></i> Create New Room
            </a>
        </div>
    </div>

    <!-- Rooms Cards -->
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p class="text-muted text-center">No rooms available. Click "Create New Room" to add one.</p>
            </div>
        }
        else
        {
            @foreach (var room in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title text-primary">Room Number: @room.RoomNumber</h5>
                            <p class="card-text text-muted">Type: @room.Type</p>
                            <p class="card-text text-muted">Status: @room.Status</p>
                        </div>
                        <div class="card-footer bg-light d-flex justify-content-around">
                            <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@room.Id">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@room.Id">
                                <i class="fa fa-info-circle"></i> Details
                            </a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@room.Id">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
